<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:jpa="http://www.springframework.org/schema/data/jpa"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
                           http://www.springframework.org/schema/data/jpa http://www.springframework.org/schema/data/jpa/spring-jpa.xsd" xmlns:ns1="http://www.springframework.org/schema/data/repository">
  <import resource="../../test/jpa-context-bootstrap.xml"/>
  <jpa:repositories base-package="br.com.farofino.domain" transaction-manager-ref="transactionManager" entity-manager-factory-ref="entityManager">
    <ns1:exclude-filter type="regex" expression=".*ProdutoRepository"/>
